- if article.crawling_status == 'not_yet'
  .media.bg-dark.mb-2.p-2.text-white.align-items-center
    .spinner-grow
    = link_to article.url, article, class: "text-light"

- else
  .bg-white.mb-2.p-2.overflow-auto
    - if article.image.attached?
      = link_to article.url do
        = image_tag article.image, class: "ml-2 mb-2", style: "width: 5em; float: right"

    %h5
      = link_to article.url, class: "text-dark" do
        %strong= article.title || article.url
      %small.ml-2
        = link_to article do
          %i.far.fa-comment
          = article.comments_count

    .text-muted{ style: "line-height: 1.2" }
      %small= excerpt(article.desc, length: 50)

    .mt-2
      = render "votes/btn", votable: article

      %small.ml-2.text-muted= article.site_name
      %small.ml-2
        - article.tags.each do |tag|
          = link_to "##{tag}", tag_path(tag)
