%section.py-5
  .container
    .d-flex.justify-content-between.align-items-center.pb-3
      %h2
        = t('title.main')
        - if params[:q].present?
          = "'#{params[:q]}'"
      - if user_signed_in?
        = link_to t('btn.new'), '#', data: { toggle: "modal", target: "#new-article-modal" }

    %section.articles
      .row
        - @articles.each do |article|
          .col-6.col-md-4.col-xl-3.mb-3
            = render article

      .d-flex.justify-content-center
        = paginate @articles
