%section.py-5
  .container
    .pb-2
      .d-flex.justify-content-center
        %h4.font-weight-bold

    .pb-2
      .d-flex.justify-content-between
        %div
          %span.text-muted
            정렬:
          = link_to_unless @order == "popular", "인기순", articles_path(order: "popular")
          = link_to_unless @order == "created", "입력순", articles_path(order: "created")
        = link_to t('btn.new'), '#', data: { toggle: "modal", target: "#new-article-modal" }

    .articles
      = render @articles
