.container
  .row
    .col-md-9
      .py-5
        .card.border-0.mb-4
          .card-body
            %h3.card-title= @article.title || @article.url
            %h6.card-subtitle.text-muted= @article.site_name

            %p.my-2.text-muted= @article.desc

            .py-4
              = link_to @article.url, target: "_blank", class: "btn btn-outline-primary btn-block" do
                %i.fas.fa-external-link
                게시글 읽기

            - if @article.user == current_user
              .text-right
                = link_to t("link.edit"), [:edit, @article]
                = link_to t("link.destroy"), @article, method: :delete, data: { confirm: '삭제하시겠습니까?' }

        %section#submission.bg-white.my-4
          .p-4
            - @article.votes_for.each do |vote|
              = link_to vote.voter.name, vote.voter
            님이 추천하였습니다.

        %section#comments.bg-white.my-4
          = render @comments
          = render "comments/form", comment: @new_comment if user_signed_in?

    .col-md-3
      .py-5
        %h3= t('title.recent_articles')
        - Article.recent.limit(5).each do |article|
          .mb-4
            = render article