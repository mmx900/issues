%section.py-5
  .container
    .d-flex.justify-content-between.align-items-center.pb-3
      %h2
        %strong.font-weight-bold
          '#{@user.name}'
        님이 추천한 글

    %section.articles
      .row
        - @articles.each do |article|
          .col-6.col-md-4.col-xl-3.mb-3
            = render article

      .d-flex.justify-content-center
        = paginate @articles
